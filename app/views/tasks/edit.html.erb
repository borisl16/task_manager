<%= link_to("Back to list", tasks_path, :class => 'back-list') %>

<div class="tasks edit"> 
    <h2>Edit Task</h2>

    <%= form_for(@task) do |f| %>

        <table summary="Task from fields">
            <tr>
                <th>Name</th>
                <td><%= f.text_field(:name) %></td>
            </tr>
            <tr>
                <th>Position</th>
                <td><%= f.text_field(:position) %></td>
            </tr>
            <tr>
                <th>Completed</th>
                <td><%= f.check_box(:completed) %></td>
            </tr>
            <tr>
                <th>Description</th>
                <td><%= f.text_area(:description) %></td>
            </tr>
        </table>

        <div class="form-buttons">
            <%= f.submit("Edit Task") %>
        </div>

    <% end %>
</div>
